import java.util.ArrayList;

import components.set.Set;
import components.set.Set1L;

public class OutMakerProofOfConcept {
    private String shirts;
    private String pants;
    private String shoes;
    private ArrayList<OutfitMakerProofOfConcept> outfit;

    public OutfitMakerProofOfConcept(String shirt, String pants, String shoes) {
        this.shirt = shirt;
        this.pants = pants;
        this.shoes = shoes;
        this.outfit = new ArrayList<>();
    }


    //kernel methods (simplified add and remove into one method + instead of has
    //made them "getter" methods)


    public String getShirt() {
        return this.shirt;
    }

    public String getPants() {
        return this.pants;
    }

        public String getShoes() {
        return this.pants;
    }



    public void addOrRemoveItem(String type, String item, boolean isAdding) {
        if (isAdding) {
            if (type.equals("shirt")) {
                this.shirt = item;
            } else if (type.equals("pants")) {
                this.pants = item;
            } else if (type.equals("shoes")) {
                this.shoes = item;
            }
            outfit.add(item);  // Adds to the outfit list
        } else {
            outfit.remove(item);  // Removes from the outfit list
        }
    }

     //still need to add secondary methods (randomizing)
     //but added displayOutfit as an addtional seconday method

    // Display the current outfit (also not sure if i need to import simple writer
    //to print out or if i can system print)

    public void displayOutfit() {
        System.out.println("Final Outfit: ");
        System.out.println("Shirt: " + getShirt());
        System.out.println("Pants: " + getPants());
        System.out.println("Shoes: " + getShoes());
    }



    public static void main(String[] args) {
        // Creating an outfit with initial shirt, pants, and shoes
        OutfitMakerProofOfConcept maker = new OutfitMakerProofOfConcept("Red Shirt", "Blue Pants", "White Shoes");

        // Display the initial outfit
        maker.displayOutfit();

        // Modify the outfit
        maker.addOrRemoveItem("shirt", "Yellow Shirt", true);  // Change shirt to Yellow
        maker.addOrRemoveItem("pants", "Black Pants", true);  // Change pants to Black

        // Display updated outfit
        maker.displayOutfit();
    }
}
